extends layout

include mixins/_storeCard
block content  
    .inner 
        div Click *insert comment icon* to leave a review!
        div **have dropdown with city filter
        div **have search bar from nav
        h2.tag-h2 #{tag || 'Filter'} 
        ul.tags
            each t in tags
                li.tag
                    a.tag__link(href=`/tags/${t._id}` class=(t._id === tag ? "tag__link--active" : ""))
                        span.tag__text= t._id
                        span.tag__count= t.count
        h2= title
        .stores
            each store in stores
                +storeCard(store)
            