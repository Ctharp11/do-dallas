extends layout

include mixins/_storeCard

block content
    .inner  
        h2.tag-h2 Filter - #{tag || 'Tags'}
        ul.tags
            li.tag
                a.tag__link(href="/stores") 
                    span.tag__text Clear filter
            each t in tags
                li.tag
                    a.tag__link(href=`/tags/${t._id}` class=(t._id === tag ? 'tag__link--active' : ''))
                        span.tag__text= t._id
                        span.tag__count= t.count
                        
        .stores
            each store in stores
                +storeCard(store)