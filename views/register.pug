extends layout

block content
    .inner
        form.form(action="/register" method="post")
            h2 Register
            label(for="name") Name
            input(type="text" name="name" value=(body && body.name))
            label(for="email") Email
            input(type="email" name="email" value=(body && body.email))
            label(for="password") Password   
            input(type="password" name="password" value=(body && body.password))
            p.password-text Your password must be at least 8 characters long, have at least one uppercase letter, at least one number, and no spaces.
            label(for="password-confirm") Confirm Password
            input(type="password" name="password-confirm")
            input.button(type="submit" value="Register")
