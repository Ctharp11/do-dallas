mixin reviewForm(store = {})
    form.reviewer(action=`/reviews/${store.id}/` method="post")
        textarea(name="text" placeholder="Have you been here? Leave a review!")
        .reviewer__meta
            .reviewer__stars    
                each num in [5, 4, 3, 2, 1]
                    input(type="radio" id=`star${num}` name="rating" value=num)
                    label(for=`star${num}`) #{num} Stars
            input.button(type='submit' class="get-loader" value="Submit Review")
