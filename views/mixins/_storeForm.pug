mixin storeForm(store = {})
    form(action=`/add/${store.id || ''}` method="post" class="card" autocomplete="off" enctype="multipart/form-data")
        label(for="name") Name 
        input(type="text" name="name" value=store.name)
        label(for="description") Description
        textarea(name="description")= store.description
        //- photos
        label(for='photo') Add Photo
        input(type="file" name="photo" id="photo" accept="image/gif, image/png, image/jpeg" )
        if (store.photo)
            img.store-photo(src=`/uploads/${store.photo}`, alt=`${store.name}`)

        //- location
        label(for="address") Address
        div.address-error
        input(type="text" id="address" name="location[address]" value=(store.location &&store.location.address))
        div.form-flex
            label.hidden(for="city") City
            input.city.hidden(type="text" name="city" value=store.city)
            label.hidden(for="lat") Latitude
            input.hidden(type="text" id="lat" name="location[coordinates][1]" value=(store.location && store.location.coordinates[1]))
            label.hidden(for="lng") Longitude
            input.hidden(type="text" id="lng" name="location[coordinates][0]" value=(store.location && store.location.coordinates[0]))
        - const choices = ['Wifi', 'Open Late', 'Family Friendly', 'Vegetarian', 'Alcohol'] 

        ul.tags
         - const tags = store.tags || []
            each choice in choices 
                .tag.tag__choice
                    input(type="checkbox" id=choice value=choice name="tags" checked=(tags.includes(choice)))
                    label(for=choice) #{choice}
        input(type="submit" value="Save Restaurant" class="button")
    
